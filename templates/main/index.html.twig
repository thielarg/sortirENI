{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block main %}
    {{ parent() }}
    <div class="row justify-content-center">
        <div class="col-xs-11 col-offset-md-1">
            {% if error %}
                <div class="alert alert-danger">Authentification incorrecte</div>
            {% endif %}

            {#titre page#}
            <div class="row mb-5">
                <div class="col text-center">
                    <h1>Authentification</h1>
                </div>
            </div>

            <form method="post">
                <div class="col mb-5">
                    <div class="form-group row">
                        <label for="_login" class="col-5 col-form-label">Login :</label>
                        <div class="col-7">
                            <input type="text" class="form-control" name="_username" placeholder="" value="{{ 'lastUsername' }}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="_password" class="col-5 col-form-label">Mot de passe :</label>
                        <div class="col-7">
                            <input type="password" class="form-control" name="_password" placeholder="">
                        </div>
                    </div>
                </div>

                {# partie du bas : connexion / se souvenir de moi / mdp oublié#}
                <div class="row text-center">
                    <div class="col">
                        <div class="form-group row">
                            <div class="col-5 mb-3">
                                <div class="form-group row">
                                    <div class="col">
                                        <button type="submit" class="btn btn-outline-primary">Connexion</button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-7">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="_remember_me" id="souvenir">
                                    <label class="form-check-label" for="souvenir">Se souvenir de moi</label>
                                </div>

                                <div>
                                    <u><a href="#">Mot de passe oublié</a></u>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
{% endblock %}
