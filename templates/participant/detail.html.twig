{%  extends "base.html.twig" %}

{% block title %} Détail participant | {{ parent() }} {% endblock %}

{% block main %}
    {{ parent() }}
    <div class="row mt-5">
    {% if participant.photo %}
        <div class="col-2 m-5">
            <img src="{{ asset('uploads/users/photos/' ~ participant.photo) }}" alt="Photo_de_profil" class="img-thumbnail rounded">
        </div>
    {% endif %}
    <div class="col">
    <table class="table">
        <tbody>
        <tr>
            <td class="text-center" colspan="2"><h1>Informations du participant</h1></td>
        </tr>
        <tr>
            <td>Prénom</td>
            <td>{{ participant.prenom }}</td>
        </tr>
        <tr>
            <td>Nom</td>
            <td>{{ participant.nom }}</td>
        </tr>
        <tr>
            <td>Téléphone</td>
            <td>{{ participant.telephone }}</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>{{ participant.email }}</td>
        </tr>
        <tr>
            <td>Ville de rattachement</td>
            <td>{{ participant.site.nom }}</td>
        </tr>
        </tbody>
    </table>
        <div class="text-center mt-5">
            <a href="{{ path('sortie_liste') }}" class="btn btn-outline-secondary">Retour</a>
        </div>
    </div>
    </div>
{% endblock %}
